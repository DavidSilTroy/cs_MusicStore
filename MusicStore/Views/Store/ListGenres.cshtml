@model IEnumerable<MusicStore.Models.Genre>

@{
    ViewData["Title"] = "List Genres";
}

<h1>Genres</h1>
<h3>Select</h3>
 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td> 
                <a 
                    asp-action="ListAlbums" 
                    asp-route-id="@item.GenreID">
                        @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td> 
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.GenreID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.GenreID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

