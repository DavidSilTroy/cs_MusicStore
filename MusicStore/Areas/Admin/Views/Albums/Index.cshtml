<h2>Filter op:</h2>
<table>
    <tr>
        <th>
             <label class="control-label">
                @Html.DisplayNameFor(model => model.Genre)
             </label>
        </th>
        <td>
             <select asp-items="ViewBag.GenreID">
                <option selected> -- Select a genre --</option>
             </select>
        </td>
    </tr>
    <tr>
        <th> 
            <label class="control-label">
                 @Html.DisplayNameFor(model => model.Artist)
            </label>
        </th>
        <td>
            <select asp-items="ViewBag.ArtistID">
                <option selected> -- Select an artists --</option>
            </select>
        </td>
    </tr>
    <tr>
        <th>
            <label>
                @Html.DisplayNameFor(model => model.Title)
            </label>
        </th>
        <td>
                <input placeholder="Write a title" />
                <br/>
        </td>
    </tr>
</table>
<th/>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlbumID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AlbumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AlbumID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
